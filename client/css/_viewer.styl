@import vars

#viewer
  width: 100%
  height: 100%
  overflow-x: hidden
  position: relative
  padding-top: 60px

#viewer .display
  height: 100%

#viewer .display-page
  position: relative
  margin-left: auto
  margin-right: auto
  margin-bottom: 20px
  text-align: center

#viewer .display-page canvas
  background: rgba(255, 255, 255, 1.0)

/* Additional ways to disable default selection in the code as well */
/* Opera requires unselectable="on" */
#viewer .display-page
  user-select: none
  -moz-user-select: none
  -khtml-user-select: none
  -webkit-user-select: none

/* meta menu */

.meta-menu
  position: fixed
  cursor: pointer
  width: 28px
  height: 22px
  left: 20px
  padding: 10px
  background: #cececf
  border-radius: 2px
  z-index: 100
  transition: 0.2s
  overflow: hidden

.meta-menu a
  color: white

.meta-menu:hover
  background: rgba(46, 46, 44, 0.5)
  width: 300px
  min-height: 420px

.meta-menu i.icon-menu
  font-size: 20px
  color: white

.meta-menu .meta-description
  display: none
  color: white
  padding: 5px

.meta-menu:hover .meta-description
  display: block

.meta-menu .meta-description .authors span:after
  content: ','

.meta-menu .meta-description .authors span:last-child:after
  content: ''

/* annotations */

.annotations
  position: absolute
  z-index: 100
  right: 20px
  width: 300px

.annotations ul.annotations-list
  list-style: none

.annotations ul.annotations-list li
  background: white
  padding: 20px
  margin: 10px 0
  border-radius: 2px
  box-shadow: 0 0 0 1px rgba(14, 41, 57, 0.12)
  transition: 0.2s

.annotations ul.annotations-list li:hover
  box-shadow: 0 0 0 1px rgba(14, 41, 57, 0.12), 0 2px 5px rgba(14, 41, 57, 0.34)

.annotations .annotation:hover
  background-color: rgba(255, 0, 0, 0.3)

/* loading */

#viewer .loading
  position: absolute
  left: 50%
  top: 50%
  height: 10em
  width: 10em
  margin-left: -5em
  margin-top: -5em
  line-height: 10em
  background-image: url('/packages/pdf.js/pdf.js/web/images/loading-icon.gif')
  background-position: 50% 50%
  background-repeat: no-repeat
  text-align: center

#viewer .display-canvas-loading
  width: 400px
  height: 400px

/* Debugging PDF parsing */

#viewer .display-page .segment, #viewer .display-page .paragraph
  position: absolute

#viewer .display-page .text-segment
  background-color: rgba(180, 170, 0, 0.2)

#viewer .display-page .image-segment
  background-color: rgba(240, 110, 0, 0.2)

#viewer .display-page .paragraph
  background-color: rgba(0, 110, 180, 0.2)

/* highlighting */

#viewer .display-page .highlight
  position: absolute
  background-color: rgba(255, 0, 0, 0.3)
